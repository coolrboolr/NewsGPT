datasource db {
  provider = "cockroachdb"
  url      = env("GORT_DB_URL")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

model Article {
  id       BigInt  @id @default(autoincrement())
  url      String  @unique
  title    String
  body     String
  cat      String
  headline String? // Generated headline
}
